<script type="text/javascript">



    function GetDynamicTextbox(value) {

        return '<p /><div>Name: <input type="text" class="form-control" style="width:40%; display:inline-block; margin-right:8px; margin-left:-5px" name="selectedIngredients" list="selectedIngredients" /> <input type="button" class="btn btn-default alert-danger" display:inline-block" onclick="RemoveTextBox(this)" value="Del" /></div>';

    }

    function AddTextBox() {

        var div = document.createElement('DIV');

        div.innerHTML = GetDynamicTextbox("");

        document.getElementById("divCont").appendChild(div);

    }

    function RemoveTextBox(div) {

        document.getElementById("divCont").removeChild(div.parentNode.parentNode);

    }

</script>
